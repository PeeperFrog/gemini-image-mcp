[Unit]
Description=Gemini Image MCP Server
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=YOUR_USERNAME
WorkingDirectory=/path/to/gemini-image-mcp/src
ExecStart=/usr/bin/python3 /path/to/gemini-image-mcp/src/gemini_image_server.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Load environment from file (keeps secrets out of unit file)
EnvironmentFile=/path/to/gemini-image-mcp/.env

[Install]
WantedBy=multi-user.target
